html {
    height: 100%;
}
body
{
    margin:0 auto;
    max-width: 420px;
    font-family: 'Roboto', sans-serif;
    font-size: small;
    height: 100%;
    /* border: solid black 1px;*/
}

.container {
    height: 100%;
}
a { text-decoration: none; }
a:link { text-decoration: none; }
a:visited { text-decoration: none; }
a:hover { text-decoration: none; }


p { margin:10px 0px; }

.nav>li>a:active{   /*클릭할 경우 */
    background-color: #9d9d9d;
    border-radius : 0px;
    height: 30px;
}
.nav-tabs .nav-link .nav-tabs .nav-link:hover, .nav-tabs .nav-link:focus, .nav-tabs .nav-link:after {
    color: #b02a37;
    background-color: #9d9d9d;
    border-radius : 0px;
    height: 40px;
}
.nav>li>a{
    color: #b02a37;
    border-radius : 0px;
    height: 40px;

}
.bottom-left {
    position: absolute;
    bottom: 8px;
    left: 16px;
}

.top-left {
    position: absolute;
    top: 8px;
    left: 16px;
}

.top-right {
    position: absolute;
    top: 8px;
    right: 16px;
}

.bottom-right {
    position: absolute;
    bottom: 8px;
    right: 16px;
}

.centered {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}

